<h1>id: <%= @inquiry.id %> の内容詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @inquiry.id %></td>
  </tr>
  <tr>
    <th>メッセージ</th>
    <td><%= @inquiry.content %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @inquiry.name %></td>
  </tr>  
  <tr>
    <th>ふりがな</th>
    <td><%= @inquiry.ruby %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @inquiry.email %></td>
  </tr>
  <tr>
    <th>メアド@前</th>
    <td><%= @inquiry.confirm_email1 %></td>
  </tr>  
　<tr>
    <th>メアド@後</th>
    <td><%= @inquiry.confirm_email2 %></td>
  </tr>
  <tr>
    <th>売上金額</th>
    <td><%= @inquiry.contact %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @inquiry.created_at %></td>
  </tr>
  <tr>
    <th>更新日時</th>
    <td><%= @inquiry.updated_at %></td>
  </tr>
</table>

<%= link_to 'このメッセージを編集する', edit_inquiry_path(@inquiry), class: 'btn btn-light' %>
<%= link_to 'このメッセージを削除する', @inquiry, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>

