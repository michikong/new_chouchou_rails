<%= form_with(model: inquiry, local: true) do |f| %>

  <% if inquiry.errors.any? %>
    <div id="error_explanation" class="alert alert-warning">
      <ul>
        <% inquiry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <li>
    <%= f.label :content, 'メッセージ' %>
    <%= f.text_field :content %>
  </li>
  <li>
    <%= f.label :name, '氏名' %>
    <%= f.text_field :name %>
  </li>
  
  <li>
    <%= f.label :ruby, 'フリガナ' %>
    <%= f.text_field :ruby %>
  </li>

  <li>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email %>
  </li>
  
  <li>
    <%= f.label :confirm_email1, 'email@前' %>
    <%= f.text_field :confirm_email1 %>
  </li>
  
  <li>
    <%= f.label :confirm_email2, 'email@後' %>
    <%= f.text_field :confirm_email2 %>
  </li>
  
  <li>
    <%= f.label :contact, '売り上げ' %>
    <%= f.text_field :contact %>
  </li>
  
  <%= f.submit '投稿' %>
<% end %>